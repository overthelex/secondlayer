# Local Development Environment Configuration
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# PostgreSQL Database Configuration
# =============================================================================
# PostgreSQL Superuser (used only during initialization)
POSTGRES_SUPERUSER=postgres
POSTGRES_SUPERUSER_PASSWORD=local_superuser_password

# Application Database User
POSTGRES_USER=secondlayer
POSTGRES_PASSWORD=local_dev_password
POSTGRES_DB=secondlayer_local

# RADA MCP Database Configuration
RADA_POSTGRES_USER=rada_mcp
RADA_POSTGRES_PASSWORD=rada_password
RADA_POSTGRES_SCHEMA=rada

# =============================================================================
# Application Configuration
# =============================================================================
NODE_ENV=development
HTTP_PORT=3000
LOG_LEVEL=debug

# JWT Secret (change in production!)
JWT_SECRET=local-dev-jwt-secret-change-in-production

# =============================================================================
# AI Model Configuration - OpenAI
# =============================================================================
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_API_KEY2=

# ZakonOnline Court Database API
ZAKONONLINE_API_TOKEN=your-zakononline-token-here
ZAKONONLINE_API_TOKEN2=

# Anthropic (optional, leave blank to disable)
ANTHROPIC_API_KEY=

# Model selection for different complexity levels
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_MODEL_QUICK=gpt-5-nano
OPENAI_MODEL_STANDARD=gpt-5-mini
OPENAI_MODEL_DEEP=gpt-5.1

# LLM Provider Strategy: openai-first (Anthropic disabled)
LLM_PROVIDER_STRATEGY=openai-first

# =============================================================================
# Security & Authentication
# =============================================================================
# API keys for accessing SecondLayer services (comma-separated)
SECONDARY_LAYER_KEYS=local-dev-key,test-key-123
RADA_API_KEYS=test-key-123

# RADA MCP integration
RADA_MCP_URL=http://rada-mcp-app-local:3001
RADA_API_KEY=test-key-123

# Google OAuth (Optional - get from https://console.cloud.google.com/)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=https://localdev.legal.org.ua/auth/google/callback

# =============================================================================
# CORS & Frontend Configuration
# =============================================================================
FRONTEND_URL=https://localdev.legal.org.ua
ALLOWED_ORIGINS=https://localdev.legal.org.ua,http://localhost:5173,http://localhost:3000

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_HOST=redis-local
REDIS_PORT=6379

# =============================================================================
# Qdrant Vector Database Configuration
# =============================================================================
QDRANT_URL=http://qdrant-local:6333

# =============================================================================
# Google Cloud Vision API Configuration (for OCR)
# =============================================================================
VISION_CREDENTIALS_PATH=/path/to/vision-ocr-credentials.json
GOOGLE_APPLICATION_CREDENTIALS=/path/to/vision-ocr-credentials.json

# =============================================================================
# OpenReyestr Configuration
# =============================================================================
OPENREYESTR_API_KEY=test-key-123
OPENREYESTR_API_KEYS=test-key-123,local-dev-key
OPENREYESTR_MCP_URL=http://openreyestr-app-local:3004

# OpenReyestr Database (separate PostgreSQL instance)
OPENREYESTR_POSTGRES_USER=openreyestr
OPENREYESTR_POSTGRES_PASSWORD=openreyestr_dev_password
OPENREYESTR_POSTGRES_DB=openreyestr_local

# =============================================================================
# MinIO Object Storage Configuration
# =============================================================================
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_USE_SSL=false

# =============================================================================
# Grafana Configuration
# =============================================================================
GRAFANA_ADMIN_PASSWORD=admin
ADMIN_EMAIL=grafana@legal.org.ua

# =============================================================================
# Frontend Build Configuration
# =============================================================================
VITE_API_URL=https://localdev.legal.org.ua

# =============================================================================
# Unified Gateway (disabled for local â€” each service on its own port)
# =============================================================================
ENABLE_UNIFIED_GATEWAY=true
