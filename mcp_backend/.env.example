# SecondLayer MCP Backend - Environment Configuration Template
# Copy this file to .env.local for development or .env for production
# Fill in actual values for your environment

# =============================================================================
# PostgreSQL Database Configuration
# =============================================================================
POSTGRES_USER=secondlayer
POSTGRES_PASSWORD=change_me_in_production
POSTGRES_DB=secondlayer
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# RADA MCP Database Configuration
RADA_POSTGRES_USER=rada_mcp
RADA_POSTGRES_PASSWORD=change_me
RADA_POSTGRES_SCHEMA=rada

# Full database URL (alternative to individual vars)
# DATABASE_URL=postgresql://secondlayer:password@localhost:5432/secondlayer

# =============================================================================
# Application Configuration
# =============================================================================
NODE_ENV=development
HTTP_PORT=3000
LOG_LEVEL=info

# JWT Secret (MUST be changed in production!)
JWT_SECRET=generate-a-secure-random-string-here

# =============================================================================
# AI Model Configuration - OpenAI
# =============================================================================
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your-key-here
OPENAI_API_KEY2=sk-proj-backup-key-here

# Model selection for different complexity levels
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002
OPENAI_MODEL_QUICK=gpt-4o-mini
OPENAI_MODEL_STANDARD=gpt-4o-mini
OPENAI_MODEL_DEEP=gpt-4o

# =============================================================================
# AI Model Configuration - Anthropic (Optional)
# =============================================================================
# Get your API key from https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-key-here

ANTHROPIC_MODEL_QUICK=claude-haiku-4.5
ANTHROPIC_MODEL_STANDARD=claude-sonnet-4.5
ANTHROPIC_MODEL_DEEP=claude-opus-4.5

# LLM Provider Strategy: openai-first, anthropic-first, or openai-only
LLM_PROVIDER_STRATEGY=openai-first

# =============================================================================
# External APIs
# =============================================================================
# ZakonOnline API - Get token from https://zakononline.ua/
ZAKONONLINE_API_TOKEN=your-token-here
ZAKONONLINE_API_TOKEN2=backup-token-here

# =============================================================================
# Security & Authentication
# =============================================================================
# API keys for accessing SecondLayer services (comma-separated)
SECONDARY_LAYER_KEYS=key1,key2,key3

# RADA MCP integration
RADA_MCP_URL=http://localhost:3001
RADA_API_KEY=test-rada-key
RADA_API_KEYS=key1,key2

# OpenReyestr MCP Integration (Ukrainian State Register)
OPENREYESTR_MCP_URL=http://localhost:3004
OPENREYESTR_API_KEY=test-openreyestr-key

# Google OAuth (Optional - for user authentication)
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# =============================================================================
# CORS & Frontend Configuration
# =============================================================================
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=optional-password

# =============================================================================
# Qdrant Vector Database Configuration
# =============================================================================
QDRANT_URL=http://localhost:6333
# QDRANT_API_KEY=optional-api-key

# =============================================================================
# Google Cloud Vision API Configuration (for OCR)
# =============================================================================
VISION_CREDENTIALS_PATH=/path/to/vision-ocr-credentials.json
GOOGLE_APPLICATION_CREDENTIALS=/path/to/vision-ocr-credentials.json

# =============================================================================
# Payment Integration - Stripe
# =============================================================================
# Get your keys from https://dashboard.stripe.com/apikeys
# Test mode: Use sk_test_... and pk_test_...
# Live mode: Use sk_live_... and pk_live_...
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here

# Webhook secret from Stripe Dashboard > Webhooks
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# =============================================================================
# Payment Integration - Fondy (Ukrainian Payment Gateway)
# =============================================================================
# Get credentials from https://portal.fondy.eu/
FONDY_MERCHANT_ID=1234567
FONDY_SECRET_KEY=your_fondy_secret_key
FONDY_API_URL=https://pay.fondy.eu/api

# =============================================================================
# Email Notifications (SMTP)
# =============================================================================
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=Your Platform Name

# SMTP Configuration (Gmail example)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Other SMTP providers:
# SendGrid: smtp.sendgrid.net:587
# Mailgun: smtp.mailgun.org:587
# AWS SES: email-smtp.region.amazonaws.com:587

# =============================================================================
# Currency Conversion
# =============================================================================
# UAH to USD conversion rate
# Update periodically or integrate with exchange rate API
UAH_TO_USD_RATE=0.027

# =============================================================================
# Production Deployment (optional)
# =============================================================================
# SERVER_HOST=0.0.0.0
# ENABLE_METRICS=true
# SENTRY_DSN=https://your-sentry-dsn
