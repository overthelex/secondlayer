# SecondLayer Payment Server - Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================================================
# Database Configuration (shared with mcp_backend)
# ============================================================================
# IMPORTANT: Change 'YOUR_DB_PASSWORD' to a strong password in production
DATABASE_URL=postgresql://financemanager:YOUR_DB_PASSWORD@localhost:5432/payments_db

# ============================================================================
# Server Configuration
# ============================================================================
HTTP_PORT=3001
HTTP_HOST=localhost
NODE_ENV=development
FRONTEND_URL=http://localhost:8000

# ============================================================================
# JWT Authentication
# ============================================================================
# REQUIRED: Generate a strong secret with: openssl rand -base64 64
# This is a placeholder - CHANGE IN PRODUCTION!
JWT_SECRET=YOUR_SECURE_JWT_SECRET_MIN_64_CHARS
JWT_EXPIRES_IN=7d

# ============================================================================
# Google OAuth2
# ============================================================================
# REQUIRED: Get credentials from: https://console.cloud.google.com/
# 1. Create OAuth2 Client ID
# 2. Add authorized redirect URIs
# 3. Copy Client ID and Client Secret below
GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID
GOOGLE_CLIENT_SECRET=YOUR_GOOGLE_CLIENT_SECRET
GOOGLE_CALLBACK_URL=http://localhost:3001/api/auth/google/callback

