{
  "name": "secondlayer-payment-server",
  "version": "1.0.0",
  "description": "Payment and subscription backend for SecondLayer MCP platform",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "npm run build && npm run start",
    "dev:watch": "tsc --watch",
    "build": "tsc",
    "start": "node dist/index.js",
    "migrate": "node dist/utils/migrate.js",
    "db:create": "node dist/utils/create-db.js",
    "db:setup": "npm run db:create && npm run build && npm run migrate",
    "lint": "eslint src --ext .ts",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "keywords": ["payment", "subscription", "mcp", "legal", "api"],
  "author": "SecondLayer Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "stripe": "^14.10.0",
    "axios": "^1.6.5",
    "ethers": "^6.9.2",
    "helmet": "^7.1.0",
    "cors": "^2.8.6",
    "dotenv": "^16.3.1",
    "express-validator": "^7.0.1",
    "express-rate-limit": "^7.1.5",
    "nodemailer": "^6.9.8",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.7",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/passport": "^1.0.16",
    "@types/passport-google-oauth20": "^2.0.14",
    "@types/passport-jwt": "^4.0.0",
    "@types/cors": "^2.8.17",
    "@types/nodemailer": "^6.4.14",
    "@types/pg": "^8.10.9",
    "@types/uuid": "^9.0.7",
    "typescript": "^5.3.3",
    "ts-node-dev": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11"
  }
}
