{
  "name": "rada-mcp",
  "version": "1.0.0",
  "description": "RADA MCP Server - Ukrainian Parliament data analysis with MCP protocol",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "dev:http": "ts-node-dev --respawn --transpile-only src/http-server.ts",
    "start": "node dist/index.js",
    "start:http": "node dist/http-server.js",
    "db:create": "bash scripts/create-db.sh",
    "migrate": "npm run build && node dist/migrations/migrate.js",
    "db:setup": "npm run db:create && npm run migrate",
    "sync:deputies": "npm run build && node dist/scripts/sync-deputies.js",
    "sync:laws": "npm run build && node dist/scripts/sync-laws.js",
    "sync:reference": "npm run build && node dist/scripts/sync-reference-data.js",
    "cleanup:cache": "npm run build && node dist/scripts/cleanup-cache.js",
    "test": "jest --no-cache --verbose",
    "test:watch": "jest --watch --no-cache --verbose",
    "lint": "eslint src --ext .ts"
  },
  "keywords": [
    "mcp",
    "rada",
    "parliament",
    "ukraine",
    "legal"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.74.0",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@secondlayer/shared": "file:../packages/shared",
    "@types/express-session": "^1.18.2",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/passport": "^1.0.17",
    "@types/passport-google-oauth20": "^2.0.17",
    "axios": "^1.13.5",
    "cheerio": "^1.1.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.4",
    "express": "^5.2.1",
    "express-session": "^1.18.2",
    "jsonwebtoken": "^9.0.3",
    "openai": "^6.22.0",
    "p-limit": "^7.3.0",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "pg": "^8.11.3",
    "prom-client": "^15.1.3",
    "redis": "^4.6.12",
    "uuid": "^13.0.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.2.3",
    "@types/pg": "^8.10.9",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^9.39.2",
    "jest": "^30.2.0",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
