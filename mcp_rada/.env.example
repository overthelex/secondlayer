# RADA MCP Server Environment Configuration

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5433
POSTGRES_USER=rada_mcp
POSTGRES_PASSWORD=rada_password
POSTGRES_DB=rada_db
DATABASE_URL=postgresql://rada_mcp:rada_password@localhost:5433/rada_db

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6380

# OpenAI API (for AI analysis and embeddings)
OPENAI_API_KEY=sk-...
OPENAI_API_KEY2=sk-...  # Optional fallback key

# Dynamic model selection by budget
OPENAI_MODEL_QUICK=gpt-4o-mini
OPENAI_MODEL_STANDARD=gpt-4o-mini
OPENAI_MODEL_DEEP=gpt-4o

# OR use single model for all budgets (simpler)
# OPENAI_MODEL=gpt-4o-mini

# Anthropic API (Optional alternative)
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL_QUICK=claude-haiku-4.5
ANTHROPIC_MODEL_STANDARD=claude-sonnet-4.5
ANTHROPIC_MODEL_DEEP=claude-opus-4.5

# LLM Provider Strategy
LLM_PROVIDER_STRATEGY=openai-first  # openai-first | anthropic-first

# SecondLayer Integration (for cross-referencing court cases)
SECONDLAYER_URL=http://localhost:3000
SECONDLAYER_API_KEY=test-key-123

# HTTP Server Security
RADA_API_KEYS=test-key-123,prod-key-456  # Comma-separated list
HTTP_PORT=3001
HTTP_HOST=0.0.0.0

# Cache TTL Configuration (seconds)
CACHE_TTL_DEPUTIES=604800   # 7 days
CACHE_TTL_BILLS=86400       # 1 day
CACHE_TTL_LAWS=2592000      # 30 days
CACHE_TTL_VOTING=259200     # 3 days

***REMOVED***2 (Optional - for admin panel)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3001/auth/google/callback
SESSION_SECRET=your-session-secret

# Logging
LOG_LEVEL=info  # debug | info | warn | error

# Node Environment
NODE_ENV=development  # development | production
